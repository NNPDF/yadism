<div id="central-matter" class="home-column">
  <div class="column-item">
    <h1 id="title">
      <img id="main-logo" src="_assets/logo/logo.png" alt="Yadism">
    </h1>
  </div>
  <div class="column-item">
    <div class="version-row">
      <a href="stable" class="docs-version is-success">
        stable
      </a>
      <a href="develop" class="docs-version">
        develop
      </a>
    </div>
  </div>
  <div class="column-item">
    {% for major, minors in versions.items() %}
    <div class="dropdown">
      <div class="dropdown-trigger">
        <button
          class="button is-info"
          aria-haspopup="true"
          aria-controls="dropdown-menu"
        >
          <span>{{ major }}</span>
          <span class="icon is-small">
            <i class="fas fa-angle-down" aria-hidden="true"></i>
          </span>
        </button>
      </div>
      <div class="dropdown-menu" id="dropdown-menu" role="menu">
        <div class="dropdown-content">
          {% for (minor, micro) in minors %}
            <a href="v{{ major }}.{{minor}}.{{micro}}" class="dropdown-item">
            {{ major }}.{{minor}}
          </a>
          {% endfor %}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
